<% content_for(:title, t('.title')) %>
<div class="container mb-5 pt-2">
  <h1><%= t('.title') %></h1>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col"><%= Reptile.human_attribute_name(:id) %></th>
          <th scope="col"><%= Reptile.human_attribute_name(:name) %></th>
          <th scope="col"><%= Reptile.human_attribute_name(:user) %></th>
          <th scope="col"><%= Reptile.human_attribute_name(:created_at) %></th>
          <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        <%= render @reptiles %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <!-- ページネーション -->
      <%= paginate @reptiles, theme: 'bootstrap-5' %>
    </div>
  </div>
</div>
