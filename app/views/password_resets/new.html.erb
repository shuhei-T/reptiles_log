<%= content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1 class="password-apply"><%= t '.title' %></h1>
      <%= form_with url: password_resets_path, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :email, User.human_attribute_name(:email), class: 'form-label' %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="text-center">
          <%= f.submit t('password_resets.new.submit'),class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>