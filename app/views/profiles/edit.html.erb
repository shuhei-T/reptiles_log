<% content_for(:title, t('.title')) %>
<div class="container">
    <h1><%= t('.title') %></h1>
    <%= form_with model: @user, url: profile_path, local: true do |f| %>
    <%= render "shared/error_messages", object: f.object %>
  <div class="row user_profile">
    <div class="col-sm-4 mb-5">
      <div class="avatar mb-3", id="img_field">
          <%= image_tag @user.avatar.url, id: 'preview' %>
        <%= f.label :avatar, class: "form-label d-block" do %>
        <span class="btn btn-outline-secondary d-block", id="avatar_btn">プロフィール画像</span>
        <%= f.file_field :avatar, class: "image_form hidden", id: 'user_avatar', accept: 'image/*', onchange: "previewImage(preview)" %>
        <%= f.hidden_field :avatar_cache %>
        <% end %>
        <div class='mt-3 mb-3'>
        </div>
      </div>
    </div>
    <div class="col-sm-8">
      <div class="mb-3">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control mb-3" %>
      </div>
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control mb-3" %>
      </div>
      <div class="mb-3">
        <%= f.label :comment, class: "form-label" %>
        <%= f.text_area :comment, class: "form-control mb-3" %>
      </div>
      <%= f.submit  class: "btn btn-primary" %>
    </div>
    <% end %>
  </div>
</div>