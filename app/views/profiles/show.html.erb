<% content_for(:title, t('title')) %>
<div class="container user_profile">
  <h1><%= t('.title') %></h1>
  <div class="row">
    <div class="col-4">
      <div class="avatar">
        <% if current_user.avatar && current_user.avatar.url %>
          <%= image_tag current_user.avatar.url %>
        <% else %>
          <%= image_tag 'default_user.png' %>
        <% end %>
      </div>
    </div>
    <div class="col-8">
      <div class="row">
        <div class="name">
          <%= current_user.name %>
            <%= link_to edit_profile_path, class: 'btn btn-outline-secondary' do %>
              <i class="fas fa-edit"></i>
              <span>編集</span>
            <% end %>
        </div>
      </div>
      <ul class="count">
        <li>
        </li>
        <li>
        </li>
      </ul>
      <div class="comment">
        <h6>コメント: </h6>
        <p><%= current_user.comment %></p>
      </div>
    </div>
    <section class="raw card-list", id="family_list">
    </section>
    <section class="raw card-list", id="follower_list">
    </section>
  </div>
</div>