<% content_for(:title, t('.title')) %>
<div class="container">
  <h1 class="user"><%= t('.title') %></h1>
  <div class="row user_profile">
    <div class="col-sm-4">
      <div class="avatar">
        <% if current_user.avatar && current_user.avatar.url %>
          <%= image_tag current_user.avatar.url %>
        <% else %>
          <%= image_tag 'default_user.png' %>
        <% end %>
      </div>
    </div>
    <div class="col-sm-8">
      <div class="name">
        <%= current_user.name %>
        <span class='edit_link'>
          <%= link_to edit_profile_path do %>
            <i class="fas fa-edit"></i>編集
          <% end %>
        </span>
      </div>
      <%= render 'profile_stats' %>
      <ul class="count">
        <li>
        </li>
        <li>
        </li>
      </ul>
      <div class="comment">
        <h6>コメント: </h6>
        <p><%= current_user.comment %></p>
      </div>
    </div>
    <section class="raw card-list", id="family_list">
    </section>
    <section class="raw card-list", id="follower_list">
    </section>
  </div>
</div>