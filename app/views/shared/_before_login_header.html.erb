<header class="before sticky-top">
  <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: rgba(107,145,111, 0.9);">
    <div class="container-fluid">
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag 'replog5.png', class: 'replogo' %>
      <% end %>
      
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
        <div class="information">
          <%= link_to login_path, class: 'login-link' do %>
            <div class="font">運営情報</div>
          <% end %>
        </div>
        <div class="contact">
          <%= link_to login_path, class: 'login-link' do %>
            <div class="font">お問い合わせ</div>
          <% end %>
        </div>
        <div class="btn_login">
          <%= link_to login_path, class: 'login-link' do %>
            <i class="fas fa-sign-in-alt size"></i>
            <div class="font">ログイン</div>
          <% end %>
        </div>
        <div class="btn_signin">
          <%= link_to new_user_path, class: 'login-link' do %>
            <i class="fas fa-pen size"></i>
            <div class="font">会員登録</div>
          <% end %>
        </div>
      </div>
    </div>
  </nav>
</header>