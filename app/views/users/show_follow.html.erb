<% content_for(:title, t('.title')) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= image_tag @user.avatar.url, size:'100x100' %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "ユーザープロフィール", @user %></span>
    </section>
    <section class="stats">
      <% render 'shared/stats' %>
        <% if @users.any? %>
          <div class="user_avatars">
            <% @users.each do |user| %>
              <%= link_to image_tag user.avatar.url, size: '30x30' %>
            <% end %>
          </div>
        <% end %>
    </section>
  </aside>

  <div class="col-md-8">
    <h3 class="content_title"><i class="fas fa-user-check"></i>フォロー一覧</h3>
    <section class="content-follow">
      <ul class="text-center nav nav-tabs">
        <li class="nav-item w-50 bg-light">
          <%= link_to 'フォロー', following_user_path, class: "nav-link link-text #{ active_if('following') }", 'aria-current': "page" %>
        </li>
        <li class="nav-item w-50 bg-light #{ active_if('followers') }">
          <%= link_to 'フォロワー', followers_user_path, class: "nav-link link-text #{ active_if('followers') }" %>
        </li>
      </ul>
    </section>
    <div class="col-md-8">
      <h3><%= @title %></h3>
    </div>
      <ul class="users follow">
        <%= render @users %>
      </ul>
  </div>
</div>